page,
.content,
swiper,
swiper-item,
video-swiper,
video {
	height: 100%;
	width: 100%;
	overflow: hidden
}

.liveIcon {
	height: 76rpx;
	width: 88rpx
}

.shop-goods {
	padding-bottom: 5rpx;
	position: fixed;
	bottom: 140rpx;
	left: 27rpx;
	height: 60rpx;
	line-height: 60rpx;
	white-space: nowrap;
	font-size: 31rpx;
	color: #fff;
	background-image: url(https://yyker-one-stand.oss-cn-beijing.aliyuncs.com/product-index/shop.png);
	background-size: 60rpx 60rpx;
	background-position-x: left;
	background-repeat: no-repeat;
	padding-left: 65rpx
}

.video-info-username {
	height: 139rpx;
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	background: rgba(0, 0, 0, .33);
	-webkit-box-sizing: border-box;
	box-sizing: border-box;
	padding-left: 30rpx;
	padding-top: 72rpx;
	color: #fff
}

.companyNotice {
	position: fixed;
	top: 150rpx;
	right: 20rpx;
	width: 200rpx;
	color: #fff;
	text-align: center;
	border-radius: 10rpx;
	overflow: hidden
}

.companyNotice-title {
	background-color: rgba(0, 0, 0, .5);
	padding: 20rpx 10rpx;
	font-size: .8em
}

.companyNotice-content {
	background-color: rgba(0, 0, 0, .3);
	padding: 20rpx 10rpx;
	font-size: .7em;
	text-align: start
}

.displayPosterImg {
	height: 800rpx;
	margin: 0 auto
}

.adver {
	position: absolute;
	bottom: 40rpx;
	left: 0rpx;
	width: 384rpx;
	height: 200rpx;
	z-index: 99999;
	overflow: hidden
}

.progress {
	position: absolute;
	bottom: 20rpx;
	left: 10rpx;
	width: calc(100% - 20rpx)
}

.adver ._img {
	width: 100%
}

.close {
	position: absolute;
	right: 5rpx;
	top: 5rpx;
	text-align: center;
	width: 20rpx;
	height: 20rpx;
	line-height: 20rpx;
	color: #fff;
	border-radius: 100%;
	border: 1px solid #ccc;
	background-color: #ccc
}

.user-logo {
	width: 100rpx;
	height: 100rpx;
	border-radius: 100%;
	-webkit-box-sizing: border-box;
	box-sizing: border-box;
	border: 3rpx solid #fff;
	overflow: hidden
}

.user-logo image {
	width: 100%;
	height: 100%
}

button.user-icon {
	padding: 0 !important;
	line-height: 1;
	color: #fff;
	background-color: rgba(0, 0, 0, 0);
	font-size: 28rpx
}

.user-icon {
	width: 70rpx;
	margin: 0 auto;
	white-space: nowrap
}

.user-icon image {
	width: 100%
}

.big-user-icon {
	width: 110rpx
}

.right-icon {
	position: absolute;
	bottom: 100rpx;
	right: 25rpx;
	color: #fff;
	text-align: center
}

.right-icon ._div,
.right-icon button {
	margin-top: 46rpx
}

.video-info {
	width: 100%;
	position: absolute;
	top: 40rpx;
	padding-left: 40rpx;
	height: 196rpx;
	line-height: 83rpx;
	color: #fff;
	font-size: 32rpx;
	line-height: 43rpx;
	background-color: rgba(0, 0, 0, .5);
	-webkit-box-sizing: border-box;
	box-sizing: border-box
}

.pisition-bottom {
	bottom: env(safe-area-inset-bottom) !important;
	top: auto
}

.shop {
	position: absolute;
	bottom: 0;
	width: 90%;
	font-size: 28rpx;
	color: #fff;
	height: 66rpx;
	line-height: 66rpx;
	margin-left: 40rpx
}

.head-type {
	position: absolute;
	top: 0;
	color: #a8a8a8;
	width: 100%;
	height: 100rpx;
	line-height: 100rpx
}

.head-type ._div {
	display: inline-block;
	margin: 0 26rpx
}

.bottom-text{
   padding-bottom: env(safe-area-inset-bottom);  
   height: 48px;
}