.card-main {
	width: 100%;
	height: 100%
}

.searchText {
	cursor: auto;
	display: inline-block;
	height: 68rpx;
	max-width: 100%;
	padding-left: 20rpx;
	text-align: left;
	line-height: 68rpx;
	font-size: 32rpx;
	color: #a8a8a8
}

.search {
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	-ms-flex-pack: center;
	justify-content: center
}

.search.focus {
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	-ms-flex-pack: start;
	justify-content: flex-start
}

.search.focus input {
	width: auto
}

page {
	width: 100%;
	height: 100%
}

.add_card {
	position: fixed;
	right: 0;
	bottom: 90rpx;
	z-index: 99;
	padding-right: 30rpx;
	padding-left: 30rpx;
	-webkit-box-sizing: border-box;
	box-sizing: border-box;
	text-align: right
}

.create-btn {
	-webkit-transition: all .8s ease-in-out;
	-o-transition: all .8s ease-in-out;
	transition: all .8s ease-in-out;
	display: -webkit-inline-box;
	display: -webkit-inline-flex;
	display: -ms-inline-flexbox;
	display: inline-flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	-ms-flex-align: center;
	align-items: center;
	-webkit-box-sizing: border-box;
	box-sizing: border-box;
	padding: 0 30rpx;
	border-radius: 1998rpx;
	white-space: nowrap;
	-o-text-overflow: ellipsis;
	text-overflow: ellipsis;
	overflow: hidden;
	color: #fff;
	position: relative
}

.create-btn .create {
	-webkit-box-flex: 1;
	-webkit-flex-grow: 1;
	-ms-flex-positive: 1;
	flex-grow: 1;
	text-align: right
}

.width-max {
	width: 100%
}

.create-btn ._img {
	-webkit-box-flex: 0;
	-webkit-flex: 0 0 60rpx;
	-ms-flex: 0 0 60rpx;
	flex: 0 0 60rpx
}

.my-card-case {
	height: 36rpx
}

.card-case-num-img {
	width: 32rpx;
	height: 32rpx
}

.separator {
	display: inline-block;
	width: 8rpx;
	height: 32rpx;
	background: #ACDED3
}
