page {
  border: none;
}

.top-zhanwei {
  height: 501rpx;
  margin-bottom: 10rpx;
}

.top-opera {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  background-color: #fff;
  box-shadow: 0 3rpx 8rpx #eee;
  z-index: 5;
}

.tab-fl {
  height: 90rpx;
  font-size: 0;
  white-space: nowrap;
}

.tab-fl text {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  min-width: 19%;
  text-align: center;
  padding: 0 10rpx;
  box-sizing: border-box;
  display: inline-block;
  position: relative;
}

.tab-fl text.active {
  color: #f77466;
}

.tab-fl text.active:before {
  content: '';
  position: absolute;
  bottom: 1rpx;
  left: 50%;
  width: 60rpx;
  height: 6rpx;
  background-color: #f77466;
  margin-left: -30rpx;
  z-index: 2;
}
/* 搜索 */
.search-component .search-wrap {
  background-color: #fff;
  padding: 20rpx 0 10rpx;
  width: 92%;
  margin: 0 auto;
}
.search-component .search-wrap .search-con {
  border: 2rpx solid rgba(217, 217, 217, 1);
  height: 60rpx;
  margin: 0 auto;
  line-height: 80rpx;
  width: 100%;
  font-size: 24rpx;
  background-color: #fff;
  border-radius: 30rpx;
  color: #BBBBBB;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search-component .search-wrap .search-con input {
  order: 2;
  width: 400rpx;
  border-radius: 8rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  border: 0rpx;
  outline: medium;
  margin-left: 10rpx;
  transition: width .3s;
  padding: 0;
}
.search-component .search-wrap .search-img {
  vertical-align: middle;
  height: 40rpx;
  width: 40rpx;
  float: left;
}
/* 轮播图 */
.lunbo{
  height: 320rpx;
  width: calc(100% - 60rpx);
  margin: 0 auto;
  border-radius: 20rpx;
  overflow: hidden;
}
.lunbo .lbItem{
  border-radius: 20rpx;
  overflow: hidden;
}

/* tabbar */
.sort-type {
  height: 84rpx;
  display: table;
  width: 100%;
  background-color: #fff;
  line-height: 84rpx;
}

.sort-type .type-item {
  display: table-cell;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

.sort-type .type-item.active {
  position: relative;
    color: #f77466;
}
.sort-type .type-item.active:after {
  width: 75%;
  height: 4rpx;
  position: absolute;
  bottom: 12rpx;
  left: 50%;
  transform: translateX(-50%);
  content: "";
  background-color: #f77466;
}
.sort-type .type-item image {
  display: inline-block;
  vertical-align: middle;
  height: 30rpx;
  width: 30rpx;
  transform: rotate(90deg);
  position: relative;
  top: -2rpx;
  margin-left: 5rpx;
  transition: all 0.3s;
}

.sort-type .type-item.show image {
  transform: rotate(-90deg);
}

/* 筛选弹出层 */
.modal-mask {
  position: fixed;
  left: 0;
  width: 100%;
  top: 500rpx;
  bottom: 0;
  z-index: 10;
  background-color: rgba(0, 0, 0, .5);
}

.modal-content {
  position: fixed;
  left: 0;
  width: 100%;
  top: 402rpx;
  /* top: 500rpx; */
  z-index: 12;
  background-color: rgba(0, 0, 0, .5);
}

.price-modal {
  background-color: #fff;
  padding: 20rpx 25rpx;
}

.price-modal .price-title {
  font-size: 28rpx;
  padding: 10rpx 0;
}

.short-price {
  padding: 15rpx 0;
}

.short-price .price-tag {
  background-color: #f5f6f7;
  color: #999;
  display: inline-block;
  vertical-align: middle;
  margin: 12rpx 0;
  margin-right: 20rpx;
  border-radius: 4rpx;
  width: 160rpx;
}

.short-price .price-tag text {
  display: block;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 26rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.short-price .price-tag.thin-border {
  background-color: #fbf4f4;
  color: #f77466;
  border-radius: 4rpx;
}

.short-price .price-tag.thin-border:after {
  border-radius: 8rpx;
  border-color: #f77466;
}

.short-price .price-tag:nth-of-type(4n) {
  margin-right: 0;
}

.list-wrap {
  padding-top: 10rpx;
}

.no-data {
  padding: 180rpx 0;
}

.no-data text {
  margin-top: 25rpx;
}

.search-result .result-num {
  background-color: #fff;
  font-size: 30rpx;
