.item-radio {
  background-color: red
}

.header {
  height: 200rpx;
  padding-top: 32rpx;
  padding-left: calc((100% - 621rpx - 20rpx) / 2);
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex
}

.header ._div {
  width: 207rpx;
  height: 131rpx;
  background-image: url(https://yyker-one-stand.oss-cn-beijing.aliyuncs.com/one-stand/Evaluation/images/list-headers-bg.png);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  color: #2e2a97;
  padding-left: 20rpx;
  padding-right: 20rpx;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex
}

.header ._div label {
  font-weight: 700;
  font-size: 28rpx;
  height: 100%;
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 85rpx;
  -ms-flex: 0 0 85rpx;
  flex: 0 0 85rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center
}

.header ._div ._span {
  font-size: 28rpx;
  height: 100%;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  -ms-flex: auto;
  flex: auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center
}

.header ._div:nth-child(2) {
  margin: 0 19rpx
}

.alice {
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  overflow-y: auto;
  height: 100%;
}

.foot-button {
  float: right;
  background-color: #8063c4;
  height: 40px;
  line-height: 40px;
  width: 101px;
  text-align: center;
  color: #fff;
  margin-top: 6px
}

.foot-submit {
  height: 46px;
  line-height: 46px;
  color: #333;
  font-size: 14px
}

.foot {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  padding: 6px 12px;
  background-color: #fff
}

.item {
  background-color: #fff;
  margin-left: 24rpx;
  margin-right: 24rpx;
  margin-top: 20rpx;
  max-width: calc(100% - 48rpx) !important;
  padding: 20rpx;
  -webkit-box-shadow: 10rpx 10rpx 2rpx 5rpx #7561a7;
  box-shadow: 10rpx 10rpx 2rpx 5rpx #7561a7
}

.item-title {
  margin-bottom: 25rpx
}

.question {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  margin: 38rpx 0 38rpx 20rpx;
}

.avatar{
  width: 94rpx;
  height: 94rpx;
  border-radius: 10rpx;
  background: var(--theme-light-green);
}

.question-dialog{
  width: 500rpx;
  height: auto;
  line-height: 40rpx;
  background: #fff;
  border-radius: 16rpx;
  box-sizing: border-box;
  margin-left: 30rpx;
  padding: 30rpx;
  position: relative;
  filter: drop-shadow(0 0 1px var(--theme-light-green));
}

.question-dialog::after{
  content: '';
  position: absolute;
  left: -30rpx;
  top: 36rpx;
  border-width: 16rpx;
  border-style: solid;
  border-color: transparent #fff transparent transparent;
  box-sizing: border-box;
}

.question-dialog .title{
  font-size: 28rpx;
  font-weight: 600;
  line-height: 50rpx;
}

.question-dialog .option{
  line-height: 60rpx;
  font-size: 28rpx;
  position: relative;
  -webkit-transition: all .3s;
  -o-transition: all .3s;
  transition: all .3s;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}


.answer {
  display: flex;
  flex-direction: row-reverse;
  justify-content: flex-start;
  align-items: flex-start;
  margin: 38rpx 20rpx 0 0;
}

.answer-dialog{
  width: 100rpx;
  height: auto;
  line-height: 40rpx;
  font-size: 24rpx;
  background: var(--theme-green);
  border-radius: 16rpx;
  box-sizing: border-box;
  margin-right: 30rpx;
  padding: 30rpx;
  position: relative;
  filter: drop-shadow(0 0 1px var(--theme-light-green));
  color: #fff;
  text-align: center;
}

.answer-dialog::after{
  content: '';
  position: absolute;
  right: -30rpx;
  top: 36rpx;
  border-width: 16rpx;
  border-style: solid;
  border-color: transparent transparent transparent var(--theme-green);
  box-sizing: border-box;
}

.submit{
  background: var(--theme-light-green);
  color: var(--theme-green);
  width: 70%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 50rpx;
  margin: 60rpx auto 30rpx;
}

.check {
  width: 40rpx;
  height: 40rpx;
  background: url(https://yyker-one-stand.oss-cn-beijing.aliyuncs.com/yimai_photos/user/dscy_noCheck.png) no-repeat;
  background-size: 100%;
  margin-right: 20rpx;
  box-sizing: border-box;
  margin-top: 10rpx;
}

.check.active {
  background: url(https://yyker-one-stand.oss-cn-beijing.aliyuncs.com/yimai_photos/user/dscy_check.png) no-repeat;
  background-size: 100%;
}