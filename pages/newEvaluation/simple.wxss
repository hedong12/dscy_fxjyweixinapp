.disabled {
  opacity: .5
}

.ceontent-count {
  position: absolute;
  bottom: 0;
  right: 47rpx;
  color: #8264c6;
  font-size: 48rpx;
  top: 0
}

.ceontent-count ._span {
  font-size: 33rpx
}

.ceontent-button {
  margin-top: 41rpx;
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 134rpx;
  line-height: 134rpx;
  width: 100%;
  background-color: #fff
}

.ceontent-button .button {
  display: inline-block;
  height: 71rpx;
  line-height: 71rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  margin: 0 5rpx;
  background-color: #8264c6;
  width: 188rpx
}

.ceontent-button .button:nth-child(1) {
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx
}

.ceontent-button .button:nth-child(2) {
  border-top-right-radius: 30rpx;
  border-bottom-right-radius: 30rpx
}

.item {
  padding: 10rpx 0;
  line-height: 48rpx;
  font-size: 32rpx;
  position: relative;
  -webkit-transition: all .3s;
  -o-transition: all .3s;
  transition: all .3s;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

.item ._span {
  width: 40rpx;
  height: 40rpx;
  background: url('https://yyker-one-stand.oss-cn-beijing.aliyuncs.com/yimai_photos/user/dscy_noCheck.png') no-repeat;
  background-size: 100%;
  box-sizing: border-box;
  margin-top: 10rpx;
  margin-right: 20rpx;
}

.item .answer-content {
  flex: 1;
  font-size: 28rpx;
}

.active ._span {
  background: url('https://yyker-one-stand.oss-cn-beijing.aliyuncs.com/yimai_photos/user/dscy_check.png') no-repeat;
  background-size: 100%;
}

