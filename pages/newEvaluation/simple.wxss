.ceontent-qa {
  background-color: #fff;
  border-radius: 12rpx;
  width: calc(100%);
  margin-left: auto;
  margin-right: auto
}

.ceontent-title {
  font-size: 35rpx;
  color: #000;
  height: 142rpx;
  padding-left: 48rpx;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  background-color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center
}

.ceontent-title ._span {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1
}

.content {
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
}

.alice,
web-view {
  height: 100%
}

.alice {
  /* background-image: url(https://yyker-one-stand.oss-cn-beijing.aliyuncs.com/one-stand/card/simple-bj.png); */
  /* background-size: 100% 100%; */
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  overflow-y: auto;
}

.van-tabs--line .van-tabs__wrap {
  display: none
}

.question {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  margin: 38rpx 0 38rpx 20rpx;
}

.avatar{
  width: 94rpx;
  height: 94rpx;
  border-radius: 10rpx;
  background: var(--theme-light-green);
}

.question-dialog{
  width: 500rpx;
  height: auto;
  line-height: 40rpx;
  background: #fff;
  border-radius: 16rpx;
  box-sizing: border-box;
  margin-left: 30rpx;
  padding: 30rpx;
  position: relative;
  filter: drop-shadow(0 0 1px var(--theme-light-green));
}

.question-dialog::after{
  content: '';
  position: absolute;
  left: -30rpx;
  top: 36rpx;
  border-width: 16rpx;
  border-style: solid;
  border-color: transparent #fff transparent transparent;
  box-sizing: border-box;
}

.question-dialog .title{
  font-size: 28rpx;
  font-weight: 600;
  line-height: 50rpx;
}


.answer {
  display: flex;
  flex-direction: row-reverse;
  justify-content: flex-start;
  align-items: flex-start;
  margin: 38rpx 20rpx 0 0;
}

.answer-dialog{
  width: 100rpx;
  height: auto;
  line-height: 40rpx;
  background: var(--theme-green);
  border-radius: 16rpx;
  box-sizing: border-box;
  margin-right: 30rpx;
  padding: 30rpx;
  position: relative;
  filter: drop-shadow(0 0 1px var(--theme-light-green));
  color: #fff;
  text-align: center;
}

.answer-dialog::after{
  content: '';
  position: absolute;
  right: -30rpx;
  top: 36rpx;
  border-width: 16rpx;
  border-style: solid;
  border-color: transparent transparent transparent var(--theme-green);
  box-sizing: border-box;
}

.submit{
  background: var(--theme-light-green);
  color: var(--theme-green);
  width: 70%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 50rpx;
  margin: 60rpx auto 30rpx;
}