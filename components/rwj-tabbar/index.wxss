/* components/rwj-tabbar/index.wxss */

.tabbar-container{
  width: 100%;
  height: 85rpx;
  background-color: #ACDED3;
  position: fixed;
  bottom: 0;
   padding-bottom: env(safe-area-inset-bottom);  
  left: 0;
  z-index: 9999999;
  display: flex;
  align-items: flex-end;
  border-top: 1rpx solid #e6e6e6;
}
.tabbar-container .tabbar-select{
  color: black;
}
.tabbar-item{
  width: 20%;
  height: 85rpx;
  color: black;
  padding: 14rpx 0rpx 10rpx 0;
  background-color: #ACDED3;
  border-top: 1rpx solid #e6e6e6;
}
.tabbar-item .tabbar-image{
  width: 100%;
  height: 50rpx;
  display: flex;
  justify-content: center;
  position: relative;
}
.tabbar-item .tabbar-image image{
  width: 40rpx;
  height: 40rpx;
}
.tabbar-item .tabbar-text{
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 26rpx;
  text-align: center;
}
 
.tabbar-center{
  height: 150rpx;
  border: 0;
  padding: 0;
  background-color: transparent;
  position: relative;
}
.tabbar-center .mask-item{
  width: 100%;
  height: 42rpx;
  overflow: hidden;
  position: relative;
}
.tabbar-center .mask-item .mask-border{
  width: 10rpx; 
  height: 0rpx; 
  border: 1rpx solid #e6e6e6;
  border-radius: 50%;
  background-color: #ACDED3;
  position: absolute;
  top: 0;
  left: calc(50% - 60rpx);
}
.tabbar-center .item-center{
  width: 100%;
  height: 50rpx;
  background-color: #ACDED3;
}
.tabbar-center .item-center .tabbar-image{
        position: absolute;
        top: 15rpx;
        left: calc(50% - 58rpx);
        width: 98rpx;
        height: 98rpx;
        padding: 10rpx 5px 5px 5px;
        background-color: #ACDED3;
        border-radius: 50%; 
}
.tabbar-center .item-center .tabbar-text{
  position: absolute;
  bottom: 12rpx;
  left: 0rpx;
  width: 100%;
}
.tabbar-center .item-center .tabbar-image image{
  width: 85%;
  height: 85%;
}