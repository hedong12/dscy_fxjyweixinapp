.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 48px;
  background: #FFF;
  display: flex;
  line-height: 1.2;
  padding-bottom: env(safe-area-inset-bottom);
  border-top: 1px solid #e6e6e6;
  background-color: #ACDED3;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.tab-bar-item .image {
  width: 27px;
  height: 27px;
}
.bulge {
  background-color: #ACDED3;
}
.bulge .tab-bar-bulge {
  position: absolute;
  z-index: -1;
  top: -16px;
  width: 70px;
  height: 80px;
  border-radius: 50%;
  border-top: 1px solid #e6e6e6;
  background-color: #ACDED3;
}
.bulge .image{
  width: 45px;
  position: relative;
  top: -20rpx;
  height: 45px;
}

.tab-bar-item .tab-bar-view {
  font-size: 10px;
}

.tab-bar-bulge + .tab-bar-view{
	    position: relative;
	    top: -8rpx;
}